{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "experimentalDecorators": true
  },
  "plugins": ["prettier"],
  "globals": {
    "React": true
  },
  "extends": ["airbnb"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jquery": true,
    "es6": true,
    "phantomjs": true,
    "jasmine": true
  },
  "rules": {
    "prettier/prettier": "error",
    "arrow-parens": "off",
    "quotes": "off",
    "no-extend-native": "off",
    "func-names": "off",
    "space-before-function-paren": "off",
    "comma-dangle": "off",
    "react/require-default-props": "off",
    "no-underscore-dangle": "off",
    "indent": "off"
  }
}
